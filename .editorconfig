# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Nix files
[*.nix]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Shell scripts
[*.sh]
shell_variant = bash
indent_size = 2

# Dockerfiles
[Dockerfile]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Git configuration
[.git{attributes,config,ignore,modules}]
indent_style = tab

# Editor-specific files
[.vscode/*]
indent_style = space
indent_size = 2